<div
  class="item"
  data-name="<%= name %>"
  data-price="<%= Number(price).toFixed(2) %>"
>
  <!-- FOTO -->
  <div class="thumb">
    <img
      src="<%= img || '/img/fallback.jpg' %>"
      alt="<%= name %>"
      loading="lazy"
      decoding="async"
      onerror="this.src='/img/fallback.jpg'">
  </div>

  <!-- TESTO -->
  <div class="i-left">
    <div class="i-name"><%= name %></div>
    <% if (desc) { %>
      <div class="i-desc"><em><%= desc %></em></div>
    <% } %>
  </div>

  <!-- PREZZO + QUANTITÀ -->
  <div class="i-right">
    <div class="i-price">€ <%= Number(price).toFixed(2).replace('.', ',') %></div>

    <div class="i-qty" role="group" aria-label="Quantità per <%= name %>">
      <button
        type="button"
        class="q"
        aria-label="Diminuisci <%= name %>"
        onclick="dec('<%= name.replace(/'/g, "\\'") %>')">−</button>

      <span
        class="qv"
        id="q-<%= name.replace(/[^a-z0-9]+/gi,'_') %>"
        aria-live="polite"
        aria-atomic="true">0</span>

      <button
        type="button"
        class="q"
        aria-label="Aumenta <%= name %>"
        onclick="inc('<%= name.replace(/'/g, "\\'") %>', <%= Number(price) %>)">+</button>
    </div>
  </div>
</div>