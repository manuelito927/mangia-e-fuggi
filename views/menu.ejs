<!doctype html>
<html lang="it">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Mangia & Fuggi – Menu</title>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="bg"></div>

  <header class="header">
    <div class="header-inner">
      <div class="brand">
        <img src="/img/logo.png" class="logo" alt="Logo" onerror="this.style.display='none'">
        <div>
          <h1 class="title">Mangia & Fuggi</h1>
          <div class="subtitle"><%= tableCode ? ('Tavolo: ' + tableCode) : 'Benvenuto!' %></div>
        </div>
      </div>

      <nav class="actions">
        <button id="btn-call" class="btn">Chiama cameriera</button>
        <button id="btn-pay" class="btn">Paga online</button>
        <button id="btn-cash" class="btn btn-ghost">Paga alla cassa</button>
      </nav>
    </div>
  </header>

  <!-- Layout a 2 colonne: lista (sx) + carrello (dx) -->
  <div class="wrap layout">
    <main id="content">
      <% function section(titolo, arr){ %>
        <section class="section">
          <h2 class="section-title"><%= titolo %></h2>

          <!-- lista verticale: ogni riga = nome/descr a sx + prezzo e +/- allineati a dx -->
          <ul class="vlist">
            <% arr.forEach(p => { %>
              <li class="item">
                <div class="i-left">
                  <div class="i-name"><%= p.nome %></div>
                  <% if (p.descr) { %><div class="i-desc"><em><%= p.descr %></em></div><% } %>
                </div>
                <div class="i-right">
                  <div class="i-price">€ <%= p.prezzo.toFixed(2) %></div>
                  <div class="i-qty">
                    <button class="q minus" data-name="<%= p.nome %>" data-price="<%= p.prezzo %>">−</button>
                    <span class="qv" data-qv="<%= p.nome %>">0</span>
                    <button class="q plus" data-name="<%= p.nome %>" data-price="<%= p.prezzo %>">+</button>
                  </div>
                </div>
              </li>
            <% }) %>
          </ul>
        </section>
      <% } %>

      <%- section('Antipasti', antipasti) %>
      <%- section('Pizze classiche', pizzeClassiche) %>
      <%- section('Pizze gourmet', pizzeGourmet) %>
      <%- section('Bevande', bevande) %>
      <%- section('Dessert', dessert) %>
    </main>

    <!-- Carrello laterale fisso -->
    <aside id="cart-side" class="cart-side">
      <h3 class="cart-title">Il tuo ordine</h3>
      <ul id="cart-list" class="cart-list"></ul>
      <div class="cart-total">
        <div>Totale</div><div id="cart-total">€ 0,00</div>
      </div>
      <button id="btn-checkout" class="btn btn-wide">Conferma ordine</button>
    </aside>
  </div>

  <div id="toast" class="toast" hidden></div>

  <script>
    const tableCode = "<%= tableCode %>";
    const cart = new Map(); // name -> { price, qty }

    const euro = n => "€ " + Number(n).toFixed(2).replace(".", ",");

    function renderCart(){
      const list = document.getElementById('cart-list');
      list.innerHTML = "";
      let total = 0;

      cart.forEach((v, name) => {
        const li = document.createElement('li');
        li.className = 'cart-row';
        li.innerHTML = `
          <div class="cr-left">
            <div class="cr-name">${name}</div>
            <div class="cr-sub">${euro(v.price)} × ${v.qty}</div>
          </div>
          <div class="cr-right">${euro(v.price * v.qty)}</div>
        `;
        list.appendChild(li);
        total += v.price * v.qty;
      });

      document.getElementById('cart-total').textContent = euro(total);
    }

    function toast(msg){ const t=document.getElementById('toast'); t.textContent=msg; t.hidden=false; setTimeout(()=>t.hidden=true,1600); }

    // + / − laterali
    document.querySelectorAll('.q.plus').forEach(btn=>{
      btn.addEventListener('click', ()=>{
        const name = btn.dataset.name, price = Number(btn.dataset.price);
        const curr = cart.get(name) || { price, qty:0 };
        curr.qty++; cart.set(name, curr);
        document.querySelector(`[data-qv="${CSS.escape(name)}"]`).textContent = curr.qty;
        renderCart();
      });
    });
    document.querySelectorAll('.q.minus').forEach(btn=>{
      btn.addEventListener('click', ()=>{
        const name = btn.dataset.name, price = Number(btn.dataset.price);
        const curr = cart.get(name) || { price, qty:0 };
        if (curr.qty > 0) curr.qty--;
        if (curr.qty === 0) cart.delete(name); else cart.set(name, curr);
        document.querySelector(`[data-qv="${CSS.escape(name)}"]`).textContent = curr.qty || 0;
        renderCart();
      });
    });

    // Pulsanti header
    document.getElementById('btn-call')?.addEventListener('click', async ()=>{
      await fetch('/api/call-waiter',{method:'POST'});
      toast('La cameriera è stata avvisata ✅');
    });
    document.getElementById('btn-pay')?.addEventListener('click', async ()=>{
      const r = await fetch('/api/pay-online',{method:'POST'}).then(r=>r.json());
      if (r.url && r.url !== '#') location.href = r.url; else toast('Pagamento online in arrivo…');
    });
    document.getElementById('btn-cash')?.addEventListener('click', async ()=>{
      await fetch('/api/pay-at-counter',{method:'POST'}); toast('Paga alla cassa selezionato ✅');
    });

    // Checkout → aggancio stampa/file lato server
    document.getElementById('btn-checkout').addEventListener('click', async ()=>{
      const items = Array.from(cart.entries()).map(([name, v]) => ({ name, price: v.price, qty: v.qty }));
      const total = items.reduce((s, it)=> s + it.price*it.qty, 0);
      if (items.length === 0) return toast('Aggiungi qualcosa al carrello');
      const resp = await fetch('/api/checkout',{
        method:'POST',
        headers:{'Content-Type':'application/json'},
        body: JSON.stringify({ tableCode, items, total })
      }).then(r=>r.json());
      if (resp.ok){ toast('Ordine inviato ✅'); }
      else { toast('Errore invio ordine'); }
    });
  </script>
</body>
</html>
