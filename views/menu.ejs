<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="stylesheet" href="/styles.css">
  <title><%= r.name %> – Tavolo <%= t.code %></title>
</head>
<body>
  <header class="header">
    <div class="brand"><%= r.name.toUpperCase() %></div>
    <div class="meta">Tavolo <strong><%= t.code %></strong></div>
  </header>

  <main class="container">
    <h2>Le nostre pizze</h2>

    <div class="menu-section">
      <% (prods||[]).forEach(p => { %>
        <div class="menu-item">
          <img src="<%= p.img || p.category_name_img || '/img/fallback.jpg' %>" alt="<%= p.name %>">
          <div class="info">
            <h3><%= p.name %></h3>
            <% if (p.description) { %><p><%= p.description %></p><% } %>
          </div>
          <div class="cta">
            <span class="price">€ <%= ((p.price_cents||0)/100).toFixed(2) %></span>
            <button class="add-btn" onclick="addToCart('<%= p.id %>')">Aggiungi</button>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <script>
    function addToCart(id){
      alert('Aggiunto al carrello: ' + id);
      // qui poi collegheremo il vero carrello
    }
  </script>
</body>
</html>
