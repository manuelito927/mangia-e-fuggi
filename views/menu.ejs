    <aside class="cart-side">
      <h3 class="cart-title">Carrello</h3>
      <ul id="cart" class="cart-list"></ul>
      <div class="cart-total"><span>Totale</span><span id="total">â‚¬ 0,00</span></div>
      <button class="btn btn-wide" onclick="checkout()">Conferma ordine</button>
      <button id="btn-pay" class="btn btn-ghost btn-wide" onclick="payOnline()" disabled>ðŸ’³ Paga Online</button>
      <div id="pay-note" class="subtitle" style="margin-top:6px;"></div>
    </aside>
