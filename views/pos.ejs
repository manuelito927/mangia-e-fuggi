<!doctype html>
<html lang="it">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>POS Tavoli</title>
<link rel="stylesheet" href="/pos.css?v=99"/>
</head>

<body>
  <div class="posShell">

    <!-- HEADER (come ora) -->
    <header class="posHeader">
      <div class="topBar">
        <h1>POS</h1>

        <div class="tabs">
          <button id="tabTables" class="tab active" type="button">TAVOLI</button>
          <button id="tabCounter" class="tab" type="button">BANCO</button>
        </div>

        <div class="search">
          <input id="tableSearch" type="text" placeholder="Cerca tavolo (es. 9, T9)..." />
        </div>

        <form action="/logout" method="POST" class="logoutForm">
          <button type="submit" class="logoutBtn">Esci</button>
        </form>
      </div>

      <!-- Vista TAVOLI -->
      <div id="tablesView" class="tablesView">
        <div id="tablesGrid" class="tablesGrid"></div>
        <input type="hidden" id="tableSelect" value="" />
      </div>

      <!-- Vista BANCO -->
      <div id="counterView" class="counterView" style="display:none;">
        <div class="hint">Modalità banco: aggiungi prodotti e incassa subito (la rifiniamo dopo).</div>
      </div>
    </header>


    <!-- CONTENUTO ALTO: ORDINE / CONTO (sopra) -->
    <main class="posMain">
      <section class="orderPanel">
        <div class="orderTitleRow">
          <h2>Ordine</h2>
          <div class="orderMeta">
            <span class="orderMetaLabel">Totale:</span>
            <span class="orderMetaValue">€ <span id="cartTotal">0.00</span></span>
          </div>
        </div>

        <div id="cartLines" class="lines"></div>

        <div class="actions">
          <button id="saveBtn" class="primary" type="button">Aggiungi al tavolo</button>
          <button id="clearBtn" type="button">Svuota selezione</button>
          <button id="payCashBtn" class="primary" type="button">CASSA (contanti)</button>
          <button id="payCardBtn" type="button">CASSA (carta)</button>
        </div>

        <div class="hint" id="statusHint"></div>
      </section>
    </main>


    <!-- DOCK IN BASSO: CATEGORIE + GRIGLIA PRODOTTI (fissa come palmare) -->
    <section class="posDock" aria-label="Griglia prodotti">

      <!-- barra categorie (sotto come nella foto) -->
      <div class="catBar">
        <div id="catGrid" class="catRow"></div>
      </div>

      <!-- griglia prodotti grande -->
      <div class="prodArea">
        <div id="itemGrid" class="prodGrid"></div>
      </div>
    </section>

  </div>


  <script>
    window.POS_BASE_URL = "<%= BASE_URL %>";
  </script>

  <!-- MODAL MODIFICATORI (lasciata uguale) -->
  <div id="modifierModal" class="modal" style="display:none;">
    <div class="modal-content">
      <h2 id="modItemName">Nome Prodotto</h2>
      <div id="modifierGroupsWrapper"></div>
      <div class="modal-actions">
        <button onclick="closeModifierModal()" class="btn-cancel">Annulla</button>
        <button id="confirmModifiersBtn" class="btn-confirm">Aggiungi al carrello</button>
      </div>
    </div>
  </div>

  <script src="/pos.js" defer></script>
</body>
</html>