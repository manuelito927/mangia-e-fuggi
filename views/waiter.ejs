<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8" />
  <title>Modalit√† cameriere</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <link rel="stylesheet" href="/waiter-pos.css?v=1">

  <style>
    :root{
      --bg:#f6efe7;
      --card:#fff6ee;
      --ink:#2b1a12;
      --muted:#7f6b57;
      --brand:#7b3e20;
      --line:#edd7c1;
      --good:#1f8f4e;
      --bad:#b42318;
      --bill:#caa400;
      --white:#fff;
    }

    body{ margin:0; font-family:system-ui,-apple-system,BlinkMacSystemFont,"Segoe UI",sans-serif; background:var(--bg); color:var(--ink); }
    .page{ padding:10px; }

    /* ====== LAYOUT PALMARE ====== */
    .pos-wrap{
      display:grid;
      grid-template-columns: 380px 1fr;
      gap:12px;
      align-items:start;
    }
    @media (max-width: 900px){
      .pos-wrap{ grid-template-columns: 1fr; }
    }

    .panel{
      background:var(--card);
      border:1px solid #f0dcc7;
      border-radius:16px;
      box-shadow:0 10px 25px rgba(0,0,0,0.08);
      overflow:hidden;
    }

    .topbar{
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap:10px;
      padding:10px 12px;
      background:#fff;
      border-bottom:1px solid var(--line);
    }
    .topbar .title{
      font-weight:900;
      font-size:14px;
      display:flex;
      gap:8px;
      align-items:center;
      flex-wrap:wrap;
    }
    .pill{
      display:inline-flex;
      align-items:center;
      gap:6px;
      font-size:12px;
      padding:4px 10px;
      border-radius:999px;
      background:#f0e1cf;
      color:#5a3923;
      border:1px solid var(--line);
      white-space:nowrap;
    }
    .btn{
      display:inline-flex;
      align-items:center;
      justify-content:center;
      border-radius:999px;
      border:none;
      padding:10px 14px;
      font-size:14px;
      font-weight:800;
      cursor:pointer;
      background:var(--brand);
      color:#fff;
    }
    .btn.secondary{
      background:#f0e1cf;
      color:#5a3923;
      border:1px solid var(--line);
    }
    .btn.sm{ padding:6px 10px; font-size:12px; }

    /* ====== COLONNA SX (tavoli + carrello) ====== */
    .section{ padding:10px 12px; }
    .section h2{ margin:0 0 8px; font-size:13px; font-weight:900; color:#3a241a; }
    .muted{ font-size:12px; color:var(--muted); }

    .tablesbar{display:flex;align-items:center;justify-content:space-between;gap:10px;flex-wrap:wrap;margin-top:6px}
    .legend{display:flex;gap:10px;align-items:center;flex-wrap:wrap;font-size:12px;color:var(--muted)}
    .lg{width:10px;height:10px;border-radius:999px;display:inline-block}
    .lg.free{background:var(--good)}
    .lg.occupied{background:var(--bad)}
    .lg.bill{background:var(--bill)}

    .tables-grid{
      margin-top:10px;
      display:grid;
      grid-template-columns:repeat(4, minmax(0,1fr));
      gap:8px;
    }
    @media (max-width: 900px){
      .tables-grid{ grid-template-columns:repeat(5, minmax(0,1fr)); }
    }
    @media (max-width: 600px){
      .tables-grid{ grid-template-columns:repeat(4, minmax(0,1fr)); }
    }

    .tbtn{
      border:1px solid var(--line);
      background:#fff;
      border-radius:14px;
      padding:10px 8px;
      cursor:pointer;
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap:8px;
    }
    .tbtn .code{font-weight:900;font-size:14px}
    .tbtn .dot{width:10px;height:10px;border-radius:999px;flex:0 0 10px}
    .tbtn.free .dot{background:var(--good)}
    .tbtn.occupied .dot{background:var(--bad)}
    .tbtn.bill .dot{background:var(--bill)}
    .tbtn.active{
      outline:3px solid rgba(123,62,32,.25);
      border-color:var(--brand);
    }

    .field{
      width:100%;
      padding:10px 12px;
      border-radius:12px;
      border:1px solid #d8c1a6;
      font-size:14px;
      box-sizing:border-box;
      background:#fff;
    }
    .row{ display:flex; gap:10px; align-items:center; }
    .row > *{ flex:1; min-width:0; }

    .divider{ height:1px; background:#ead7c3; margin:10px 0; }

    /* ====== CARRELLO ‚Äúpalmare‚Äù ====== */
    .cart-box{ max-height: 44vh; overflow:auto; padding-right:6px; }
    @media (max-width: 900px){ .cart-box{ max-height: 34vh; } }

    .cart-row{
      display:flex;
      justify-content:space-between;
      gap:8px;
      padding:10px 0;
      border-top:1px solid #eee;
      align-items:flex-start;
    }
    .cart-row:first-child{ border-top:none; }
    .cart-name{ font-weight:900; font-size:13px; }
    .cart-sub{ font-size:12px; color:var(--muted); }
    .qtywrap{ display:flex; gap:6px; align-items:center; }
    .qtybtn{
      border:1px solid var(--line);
      background:#fff;
      padding:6px 10px;
      border-radius:999px;
      cursor:pointer;
      font-weight:900;
    }

    .totalbar{
      display:flex;
      align-items:center;
      justify-content:space-between;
      gap:10px;
      padding:10px 12px;
      background:#fff;
      border-top:1px solid var(--line);
    }
    .totalbar .tot{
      font-weight:1000;
      font-size:16px;
    }

    /* ====== COLONNA DX (menu) ====== */
    .menutop{
      padding:10px 12px;
      background:#fff;
      border-bottom:1px solid var(--line);
      display:flex;
      gap:10px;
      flex-wrap:wrap;
      align-items:center;
    }
    .chips{
      display:flex;
      gap:8px;
      overflow-x:auto;
      -webkit-overflow-scrolling:touch;
      padding-bottom:4px;
      width:100%;
    }
    .chip{
      flex:0 0 auto;
      border:1px solid var(--line);
      background:#fff;
      color:#5a3923;
      padding:10px 14px;
      border-radius:999px;
      font-weight:900;
      cursor:pointer;
      user-select:none;
      white-space:nowrap;
      font-size:13px;
    }
    .chip.active{
      background:var(--brand);
      border-color:var(--brand);
      color:#fff;
    }

    #menu-grid{
      padding:10px 12px;
      display:grid;
      grid-template-columns:repeat(4,minmax(0,1fr));
      gap:10px;
    }
    @media (max-width: 1200px){ #menu-grid{ grid-template-columns:repeat(3,minmax(0,1fr)); } }
    @media (max-width: 900px){ #menu-grid{ grid-template-columns:repeat(4,minmax(0,1fr)); } }
    @media (max-width: 600px){ #menu-grid{ grid-template-columns:repeat(3,minmax(0,1fr)); } }

    .mitem{
      background:#fff;
      border:1px solid var(--line);
      border-radius:14px;
      padding:10px;
      cursor:pointer;
      min-height:72px;
      display:flex;
      flex-direction:column;
      justify-content:space-between;
    }
    .mitem:hover{ background:#fff9f2; }
    .mitem .name{ font-weight:1000; font-size:13px; line-height:1.1; }
    .mitem .desc{ font-size:11px; color:var(--muted); margin-top:6px; line-height:1.1; }
    .mitem .foot{ display:flex; justify-content:space-between; align-items:center; margin-top:8px; gap:6px; }
    .badge{ display:inline-flex; padding:3px 8px; border-radius:999px; font-size:11px; background:#f0e1cf; color:#5a3923; border:1px solid var(--line); }
    .price{ font-weight:1000; }

    /* ====== ORDERS TAB (lasciato) ====== */
    .tabs { display:flex; gap:10px; align-items:center; flex-wrap:wrap; }
    .tabbtn{
      border:1px solid var(--line);
      background:#fff;
      color:#5a3923;
      padding:8px 12px;
      border-radius:999px;
      font-weight:900;
      cursor:pointer;
      font-size:13px;
    }
    .tabbtn.active{ background:var(--brand); color:#fff; border-color:var(--brand); }
    .tabpanel{ display:none; }
    .tabpanel.active{ display:block; }

    .table-wrap { margin:12px; overflow-x:auto; border-radius:14px; border:1px solid var(--line); background:#fff; }
    table { width:100%; border-collapse:collapse; font-size:13px; }
    thead { background:#faefe1; }
    th,td { padding:8px 10px; text-align:left; white-space:nowrap; }
    tbody tr:nth-child(even){ background:#fff9f2; }
    .status-pill{ display:inline-flex; padding:3px 9px; border-radius:999px; font-size:12px; }
    .status-pill.pending{ background:#fff1bf; color:#7a5b00; }
    .status-pill.completed{ background:#d9f7d9; color:#11611b; }
    .status-pill.canceled{ background:#ffd7d7; color:#8b1e1e; }
    .text-center{ text-align:center; }
  </style>
</head>

<body>
<div class="page">

  <% if (!loggedIn) { %>
    <div class="panel" style="max-width:480px;margin:40px auto;">
      <div class="topbar">
        <div class="title">Modalit√† cameriere</div>
      </div>
      <div class="section">
        <p class="muted">Inserisci il PIN salvato nelle impostazioni della pizzeria.</p>

        <% if (presetTable) { %>
          <p class="muted">Tavolo impostato da QR: <b><%= presetTable %></b></p>
        <% } %>

        <form method="POST" action="/waiter" style="margin-top:12px;">
          <label for="pin" class="muted">PIN</label>
          <input id="pin" name="pin" type="password" maxlength="10" autocomplete="off" class="field" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢" style="margin-top:6px"/>

          <% if (error) { %>
            <div style="margin-top:10px;padding:8px 10px;border-radius:10px;background:#ffe5e0;color:#8b1e08;font-size:14px;"><%= error %></div>
          <% } %>

          <button type="submit" class="btn" style="margin-top:12px;width:100%;">Entra</button>
        </form>
      </div>
    </div>

  <% } else { %>

    <!-- HEADER -->
    <div class="panel" style="margin-bottom:12px;">
      <div class="topbar">
        <div class="title">
          ‚úÖ Cameriere
          <% if (presetTable) { %>
            <span class="pill">Tavolo QR: <b><%= presetTable %></b></span>
          <% } %>
        </div>

        <div class="tabs">
          <button type="button" class="tabbtn active" data-tab="pos">üßæ POS</button>
          <button type="button" class="tabbtn" data-tab="orders">üìã Ordini</button>
          <form method="POST" action="/logout" style="margin:0;">
            <button type="submit" class="btn secondary sm">Esci</button>
          </form>
        </div>
      </div>
    </div>

    <!-- TAB POS -->
    <section id="tab-pos" class="tabpanel active">
      <div class="pos-wrap">

        <!-- SINISTRA: Tavoli + Dettagli ordine + Carrello -->
        <div class="panel">
          <div class="topbar">
            <div class="title">Ordine</div>
            <div class="row" style="max-width:240px;">
              <select id="order-mode" class="field" style="padding:8px 10px;">
                <option value="table">Tavolo</option>
                <option value="takeaway">Asporto</option>
              </select>
            </div>
          </div>

          <div class="section">
            <div class="row">
              <div>
                <div class="muted">Tavolo / Codice</div>

                <% if (presetTable) { %>
                  <div class="muted" style="margin-top:6px">
                    Stai lavorando su <b><%= presetTable %></b>
                    <button type="button" id="change-table-btn" class="btn secondary sm" style="margin-left:8px;">Cambia</button>
                  </div>
                <% } %>

                <input
                  id="order-table"
                  class="field"
                  placeholder="Es. T1"
                  value="<%= presetTable || '' %>"
                  style="margin-top:6px"
                  <%= presetTable ? "readonly" : "" %>
                />
              </div>
            </div>

            <div class="divider"></div>

            <h2>Tavoli</h2>
            <div class="tablesbar">
              <div class="legend">
                <span class="lg free"></span><span>Libero</span>
                <span class="lg occupied"></span><span>Occupato</span>
                <span class="lg bill"></span><span>Conto</span>
              </div>
              <button type="button" class="btn secondary sm" id="tables-refresh">Aggiorna</button>
            </div>

            <div id="tables-grid" class="tables-grid">
              <div class="muted">Caricamento tavoli...</div>
            </div>

            <div class="divider"></div>

            <div class="row">
              <button type="button" class="btn secondary" id="load-open-order-btn">üì• Carica ordine</button>
              <button type="button" class="btn secondary" id="save-edit-order-btn" style="display:none">‚úÖ Salva modifiche</button>
            </div>
            <div id="edit-order-hint" class="muted" style="margin-top:8px;"></div>

            <div class="divider"></div>

            <div class="muted">Nota cucina (opzionale)</div>
            <textarea id="order-note" class="field" rows="2" placeholder="Indicazioni..." style="margin-top:6px;"></textarea>

            <div class="divider"></div>

            <h2>Carrello</h2>
            <div id="cart-box" class="cart-box muted">Carrello vuoto.</div>
          </div>

          <div class="totalbar">
            <div>
              <div class="muted">Totale</div>
              <div class="tot" id="order-total">‚Ç¨ 0,00</div>
            </div>
            <button type="submit" form="new-order-form" class="btn">Invia</button>
          </div>

          <!-- form invisibile: rimane per il submit -->
          <form id="new-order-form" style="display:none;"></form>
          <div id="new-order-message" class="muted" style="padding:10px 12px;"></div>
        </div>

        <!-- DESTRA: Menu + categorie + cerca -->
        <div class="panel">
          <div class="menutop">
            <div style="width:100%;">
              <div class="muted">Categorie</div>
              <div id="cat-chips" class="chips" style="margin-top:8px;"></div>
            </div>

            <div style="width:100%;">
              <div class="muted">Cerca</div>
              <input id="menu-search" class="field" placeholder="Scrivi un nome..." style="margin-top:6px;">
            </div>
          </div>

          <div id="menu-grid"></div>
        </div>

      </div>
    </section>

    <!-- TAB ORDERS -->
    <section id="tab-orders" class="tabpanel">
      <div class="panel">
        <div class="topbar">
          <div class="title">Ordini attivi <span class="pill">auto 10s</span></div>
          <button type="button" class="btn secondary sm" id="refresh-orders-btn">Aggiorna</button>
        </div>

        <div class="table-wrap">
          <table>
            <thead>
              <tr>
                <th>ID</th>
                <th>Tavolo</th>
                <th>Stato</th>
                <th>Modo</th>
                <th>Totale</th>
                <th>Creato</th>
                <th>Azioni</th>
              </tr>
            </thead>
            <tbody id="orders-body">
              <tr><td colspan="7" class="text-center muted">Caricamento ordini...</td></tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>

<script>
<% if (loggedIn) { %>
  // ====================== TAB SWITCH ======================
  const tabBtns = Array.from(document.querySelectorAll(".tabbtn"));
  const tabPos = document.getElementById("tab-pos");
  const tabOrders = document.getElementById("tab-orders");

  function setTab(name){
    tabBtns.forEach(b => b.classList.toggle("active", b.dataset.tab === name));
    tabPos.classList.toggle("active", name === "pos");
    tabOrders.classList.toggle("active", name === "orders");
    history.replaceState(null, "", "#"+name);
  }

  tabBtns.forEach(btn => btn.addEventListener("click", () => setTab(btn.dataset.tab)));
  const hash = (location.hash || "").replace("#","");
  if (hash === "orders") setTab("orders");

  // ====================== STATE ======================
  let MENU = { categories: [], items: [] };
  let ACTIVE_CAT_ID = null; // null = tutte
  let CART = [];
  let CURRENT_ORDER_ID = null;

  const PRESET_TABLE = "<%= (presetTable || '').toString().replace(/"/g, '\\"') %>";
  const HAS_PRESET_TABLE = !!PRESET_TABLE;

  if (HAS_PRESET_TABLE) {
    const tableInput = document.getElementById("order-table");
    if (tableInput) {
      tableInput.value = PRESET_TABLE;
      tableInput.readOnly = true;
    }
    const btn = document.getElementById("change-table-btn");
    if (btn) {
      btn.addEventListener("click", () => {
        const ok = confirm("Vuoi cambiare tavolo? (Sblocca il campo)");
        if (!ok) return;
        tableInput.readOnly = false;
        tableInput.focus();
        tableInput.select();
      });
    }
  }

  // ====================== HELPERS ======================
  const fmtMoney = (x) => {
    const n = Number(x || 0);
    return "‚Ç¨ " + n.toFixed(2).replace(".", ",");
  };

  function cartTotal(){
    return CART.reduce((s,i)=> s + (Number(i.price)*Number(i.qty)), 0);
  }

  function catName(id){
    const c = (MENU.categories||[]).find(x => Number(x.id) === Number(id));
    return c ? c.name : "‚Äî";
  }

  function findCartItemByKey(key){
    return CART.find(x => x.key === key);
  }

  // ====================== RENDER CART ======================
  function renderCart(){
    const box = document.getElementById("cart-box");
    const totalEl = document.getElementById("order-total");
    totalEl.textContent = fmtMoney(cartTotal());

    if(!CART.length){
      box.textContent = "Carrello vuoto.";
      box.classList.add("muted");
      return;
    }

    box.classList.remove("muted");

    box.innerHTML = CART.map(it => `
      <div class="cart-row">
        <div style="flex:1; min-width:0;">
          <div class="cart-name">${it.name}</div>
          <div class="cart-sub">${fmtMoney(it.price)}</div>

          <textarea
            class="field"
            data-note-key="${it.key}"
            rows="2"
            placeholder="Nota (es. senza sale, ben cotto...)"
            style="margin-top:6px; font-size:12px; padding:8px 10px;"
          >${it.note ? it.note : ""}</textarea>
        </div>

        <div class="qtywrap" style="margin-left:8px;">
          <button type="button" class="qtybtn" data-act="dec" data-key="${it.key}">-</button>
          <b>${it.qty}</b>
          <button type="button" class="qtybtn" data-act="inc" data-key="${it.key}">+</button>
          <button type="button" class="qtybtn" data-act="del" data-key="${it.key}">üóë</button>
        </div>
      </div>
    `).join("");
  }

  // ====================== ADD/UPDATE CART ======================
  function addToCart(menuItem){
    const key = "id:" + menuItem.id;
    const existing = findCartItemByKey(key);

    if(existing){
      existing.qty += 1;
    } else {
      CART.push({
        key,
        id: menuItem.id,
        name: menuItem.name,
        price: Number(menuItem.price),
        qty: 1,
        note: ""
      });
    }
    renderCart();
  }

  // ====================== MENU ======================
  function renderMenu(){
    const grid = document.getElementById("menu-grid");
    const q = (document.getElementById("menu-search").value || "").toLowerCase().trim();

    let items = (MENU.items || []).filter(it => it.is_available !== false);

    if (ACTIVE_CAT_ID) {
      items = items.filter(it => Number(it.category_id) === Number(ACTIVE_CAT_ID));
    }

    if(q) items = items.filter(it => (it.name||"").toLowerCase().includes(q));

    if(!items.length){
      grid.innerHTML = `<div class="muted" style="padding:10px 12px;">Nessun prodotto trovato.</div>`;
      return;
    }

    grid.innerHTML = items.map(it => `
      <div class="mitem" data-mid="${it.id}">
        <div>
          <div class="name">${it.name}</div>
          ${it.description ? `<div class="desc">${it.description}</div>` : ``}
        </div>
        <div class="foot">
          <span class="badge">${catName(it.category_id)}</span>
          <span class="price">${fmtMoney(it.price)}</span>
        </div>
      </div>
    `).join("");
  }

  async function loadMenu(){
    const grid = document.getElementById("menu-grid");
    grid.innerHTML = `<div class="muted" style="padding:10px 12px;">Caricamento menu...</div>`;

    const res = await fetch("/api/menu", { headers: { "Accept":"application/json" } });
    const data = await res.json().catch(()=>null);
    if(!data || !data.ok) throw new Error("menu");

    MENU.categories = data.categories || [];
    MENU.items = data.items || [];

    const chips = document.getElementById("cat-chips");
    const cats = MENU.categories.slice().sort((a,b)=>(a.sort_order||0)-(b.sort_order||0));

    chips.innerHTML =
      `<button type="button" class="chip active" data-cid="">Tutte</button>` +
      cats.map(c => `<button type="button" class="chip" data-cid="${c.id}">${c.name}</button>`).join("");

    chips.onclick = (e) => {
      const btn = e.target.closest(".chip");
      if(!btn) return;

      const cid = btn.getAttribute("data-cid");
      ACTIVE_CAT_ID = cid ? Number(cid) : null;

      Array.from(chips.querySelectorAll(".chip")).forEach(x => x.classList.toggle("active", x === btn));
      renderMenu();
    };

    renderMenu();
  }

  // ====================== TAVOLI ======================
  let ACTIVE_TABLE = null;

  function setActiveTable(code){
    ACTIVE_TABLE = code;

    const inp = document.getElementById("order-table");
    inp.value = code;
    inp.readOnly = false;

    loadOpenOrderForTable();

    document.querySelectorAll(".tbtn").forEach(b => {
      b.classList.toggle("active", b.dataset.table === code);
    });
  }

  async function loadTables(){
    const box = document.getElementById("tables-grid");
    box.innerHTML = `<div class="muted">Caricamento...</div>`;

    try{
      const r = await fetch("/api/waiter/tables", {
        headers:{ "Accept":"application/json" },
        credentials:"include"
      });
      const j = await r.json().catch(()=>null);
      if(!j || !j.ok) throw new Error("tables");

      const tables = j.tables || [];
      box.innerHTML = tables.map(t => `
        <button type="button" class="tbtn ${t.status}" data-table="${t.code}">
          <div class="code">${t.code}</div>
          <span class="dot"></span>
        </button>
      `).join("");
    }catch(e){
      console.error(e);
      box.innerHTML = `<div class="muted">Errore caricamento tavoli.</div>`;
    }
  }

  document.getElementById("tables-grid").addEventListener("click", (e)=>{
    const b = e.target.closest(".tbtn");
    if(!b) return;
    setActiveTable(b.dataset.table);
  });

  document.getElementById("tables-refresh").addEventListener("click", loadTables);

  // ====================== EVENTI MENU/CARRELLO ======================
  document.getElementById("menu-search").addEventListener("input", renderMenu);

  document.getElementById("menu-grid").addEventListener("click", (e)=>{
    const card = e.target.closest("[data-mid]");
    if(!card) return;
    const id = Number(card.getAttribute("data-mid"));
    const it = (MENU.items||[]).find(x => Number(x.id) === id);
    if(it) addToCart(it);
  });

  document.getElementById("cart-box").addEventListener("click", (e)=>{
    const b = e.target.closest("[data-act]");
    if(!b) return;

    const key = b.getAttribute("data-key");
    const act = b.getAttribute("data-act");
    const it = findCartItemByKey(key);
    if(!it) return;

    if(act === "inc") it.qty += 1;
    if(act === "dec") it.qty = Math.max(1, it.qty - 1);
    if(act === "del") CART = CART.filter(x => x.key !== key);

    renderCart();
  });

  document.getElementById("cart-box").addEventListener("input", (e)=>{
    const t = e.target.closest("textarea[data-note-key]");
    if(!t) return;
    const key = t.getAttribute("data-note-key");
    const it = findCartItemByKey(key);
    if(!it) return;
    it.note = t.value;
  });

  // ====================== MODIFICA ORDINE DEL TAVOLO (QR) ======================
  async function loadOpenOrderForTable(){
    const table = (document.getElementById("order-table").value || "").trim();
    const hint = document.getElementById("edit-order-hint");
    hint.textContent = "";

    if(!table){
      alert("Inserisci il tavolo (es. T1).");
      return;
    }

    const resp = await fetch(`/api/waiter/open-order?table=${encodeURIComponent(table)}`);
    const data = await resp.json().catch(()=>null);
    if(!data || !data.ok){
      alert("Errore caricamento ordine del tavolo.");
      return;
    }

    if(!data.order){
      CURRENT_ORDER_ID = null;
      document.getElementById("save-edit-order-btn").style.display = "none";
      hint.textContent = "Nessun ordine pending trovato per questo tavolo (ancora).";
      return;
    }

    CURRENT_ORDER_ID = data.order.id;

    CART = (data.items || []).map(x => {
      const name = x.name || x.item_name;
      const price = Number(x.price ?? x.unit_price ?? 0);
      const qty = Number(x.qty ?? x.quantity ?? 1);
      const note = (x.note ?? x.item_note ?? x.product_note ?? "") + "";

      const menuItem = (MENU.items||[]).find(m => (m.name || "").trim() === (name || "").trim());
      const id = menuItem ? menuItem.id : null;

      return {
        key: id ? `id:${id}` : `name:${name}`,
        id,
        name,
        price,
        qty,
        note
      };
    });

    document.getElementById("order-note").value = data.order.customer_note || "";
    renderCart();

    document.getElementById("save-edit-order-btn").style.display = "inline-flex";
    hint.textContent = `‚úÖ Ordine #${CURRENT_ORDER_ID} caricato. Modifica e poi salva.`;
  }

  async function saveEditsToCurrentOrder(){
    const hint = document.getElementById("edit-order-hint");
    hint.textContent = "";

    if(!CURRENT_ORDER_ID){
      alert("Prima carica l‚Äôordine del tavolo.");
      return;
    }
    if(!CART.length){
      alert("Carrello vuoto: aggiungi almeno un prodotto.");
      return;
    }

    const total = cartTotal();
    const note  = (document.getElementById("order-note").value || "").trim();

    const items = CART.map(x => ({
      name: x.name,
      qty: x.qty,
      price: x.price,
      note: (x.note || "").trim()
    }));

    const r1 = await fetch(`/api/waiter/orders/${CURRENT_ORDER_ID}/update-items`, {
      method:"POST",
      headers:{ "Content-Type":"application/json" },
      body: JSON.stringify({ items, total })
    });
    const j1 = await r1.json().catch(()=>null);
    if(!j1 || !j1.ok){
      alert("Errore nel salvataggio righe/totale.");
      return;
    }

    const r2 = await fetch(`/api/waiter/orders/${CURRENT_ORDER_ID}/note`, {
      method:"POST",
      headers:{ "Content-Type":"application/json" },
      body: JSON.stringify({ note })
    });
    const j2 = await r2.json().catch(()=>null);
    if(!j2 || !j2.ok){
      console.warn("note not saved");
    }

    hint.textContent = `‚úÖ Modifiche salvate su ordine #${CURRENT_ORDER_ID} ‚Äî Totale ${fmtMoney(total)}.`;
    loadOrders();
  }

  document.getElementById("load-open-order-btn").addEventListener("click", loadOpenOrderForTable);
  document.getElementById("save-edit-order-btn").addEventListener("click", saveEditsToCurrentOrder);

  // ====================== NUOVO ORDINE (checkout) ======================
  document.getElementById("new-order-form").addEventListener("submit", async (e)=>{
    e.preventDefault();

    const msgEl = document.getElementById("new-order-message");
    msgEl.style.color = "#7f6b57";
    msgEl.textContent = "";

    if(!CART.length){
      msgEl.style.color = "#8b1e08";
      msgEl.textContent = "Aggiungi almeno un prodotto.";
      return;
    }

    const mode  = document.getElementById("order-mode").value;
    const table = document.getElementById("order-table").value.trim();
    const note  = document.getElementById("order-note").value.trim();

    if(mode === "table" && !table){
      msgEl.style.color = "#8b1e08";
      msgEl.textContent = "Inserisci il tavolo (es. T1).";
      return;
    }

    const items = CART.map(x => ({
      name: x.name,
      qty: x.qty,
      price: x.price,
      note: (x.note || "").trim()
    }));
    const total = cartTotal();

    try{
      const resp = await fetch("/api/checkout", {
        method:"POST",
        headers:{ "Content-Type":"application/json" },
        body: JSON.stringify({
          tableCode: (mode === "table") ? table : null,
          items,
          total,
          orderMode: (mode === "table") ? "table" : "takeaway",
          customerNote: note || null
        })
      });
      const data = await resp.json();
      if(!data.ok) throw new Error(data.error || "error");

      CART = [];
      renderCart();

      CURRENT_ORDER_ID = null;
      document.getElementById("save-edit-order-btn").style.display = "none";
      document.getElementById("edit-order-hint").textContent = "";

      if (HAS_PRESET_TABLE) {
        document.getElementById("order-table").value = PRESET_TABLE;
        document.getElementById("order-table").readOnly = true;
      } else {
        document.getElementById("order-table").value = "";
      }
      document.getElementById("order-note").value  = "";

      msgEl.style.color = "#11611b";
      msgEl.textContent = "‚úÖ Ordine inviato (ID: " + data.order_id + ").";

      setTab("orders");
      loadOrders();
      loadTables();
    }catch(err){
      console.error(err);
      msgEl.style.color = "#8b1e08";
      msgEl.textContent = "Errore nell'invio ordine.";
    }
  });

  // ====================== LISTA ORDINI ======================
  async function loadOrders() {
    const tbody = document.getElementById("orders-body");
    tbody.innerHTML = `<tr><td colspan="7" class="text-center muted">Caricamento...</td></tr>`;

    try {
      const today = new Date().toISOString().slice(0,10);
      const resp = await fetch("/api/waiter/orders?day=" + encodeURIComponent(today));
      const data = await resp.json();
      if (!data.ok) throw new Error(data.error || "error");

      const orders = data.orders || [];
      if (!orders.length) {
        tbody.innerHTML = `<tr><td colspan="7" class="text-center muted">Nessun ordine per oggi.</td></tr>`;
        return;
      }

      tbody.innerHTML = orders.map(o => {
        const created = o.created_at ? new Date(o.created_at) : null;
        const hh = created ? String(created.getHours()).padStart(2,"0") : "--";
        const mm = created ? String(created.getMinutes()).padStart(2,"0") : "--";

        const statusClass =
          o.status === "completed" ? "completed" :
          o.status === "canceled" ? "canceled" : "pending";

        const modeLabel =
          o.order_mode === "takeaway" ? "Asporto" :
          (o.order_mode === "home" ? "Da casa" : "Tavolo");

        return `
          <tr>
            <td>#${o.id}</td>
            <td>${o.table_code || "-"}</td>
            <td><span class="status-pill ${statusClass}">${o.status}</span></td>
            <td>${modeLabel}</td>
            <td>${fmtMoney(o.total || 0)}</td>
            <td>${hh}:${mm}</td>
            <td>
              <button class="btn sm" data-act="complete" data-id="${o.id}">Completa</button>
              <button class="btn sm secondary" data-act="cancel" data-id="${o.id}">Annulla</button>
              <button class="btn sm secondary" data-act="restore" data-id="${o.id}">Ripristina</button>
            </td>
          </tr>
        `;
      }).join("");
    } catch (err) {
      console.error(err);
      tbody.innerHTML = `<tr><td colspan="7" class="text-center muted">Errore nel caricamento ordini.</td></tr>`;
    }
  }

  document.getElementById("refresh-orders-btn").addEventListener("click", loadOrders);

  document.getElementById("orders-body").addEventListener("click", async (e) => {
    const btn = e.target.closest("button[data-act]");
    if (!btn) return;

    const id  = btn.getAttribute("data-id");
    const act = btn.getAttribute("data-act");

    const map = { complete: "complete", cancel: "cancel", restore: "restore" };
    const endpoint = map[act];
    if (!endpoint) return;

    try {
      const resp = await fetch(`/api/waiter/orders/${id}/${endpoint}`, {
        method: "POST",
        headers: { "Content-Type":"application/json" }
      });
      const data = await resp.json();
      if (!data.ok) throw new Error(data.error || "error");
      loadOrders();
      loadTables();
    } catch (err) {
      console.error(err);
      alert("Errore nell'aggiornare l'ordine.");
    }
  });

  // ====================== BOOT ======================
loadMenu()
  .then(() => {
    renderCart();
    loadOrders();
    loadTables();
  })
  .catch(e => {
    console.error(e);
    const grid = document.getElementById("menu-grid");
    if (grid) {
      grid.innerHTML = '<div class="muted" style="padding:10px">Errore caricamento menu.</div>';
    }
  });

setInterval(loadOrders, 10000);
setInterval(loadTables, 8000);
<% } %>
</script>

