<!doctype html>
<html lang="it">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Mangia & Fuggi</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* --- Landing con video --- */
    .landing{
      position:relative; min-height:100dvh;
      display:flex; align-items:center; justify-content:center;
      padding:24px 16px; overflow:hidden; background:#000;
    }
    .landing video.bg{
      position:absolute; inset:0; width:100%; height:100%;
      object-fit:cover;
      filter:brightness(0.95) contrast(1.1) saturate(1.2);
      opacity:.01; transition:opacity .4s ease;   /* fade-in */
    }
    .landing.loaded video.bg{ opacity:1; }
    .landing::after{
      content:""; position:absolute; inset:0;
      background: radial-gradient(900px 600px at 50% 0%, #00000040, transparent);
      pointer-events:none;
    }
    .landing-inner{
      position:relative; z-index:1; width:100%; max-width:760px; margin:auto;
    }

    /* Brand */
    .brand-top{display:flex; align-items:center; gap:12px; margin-bottom:12px}
    .brand-top .logo{
      width:56px;height:56px;border-radius:14px;object-fit:cover;
      box-shadow:0 8px 24px #00000055;border:2px solid #ffffff50;background:#fff;
    }
    .brand-title{color:#fff; font-family:"Playfair Display", Georgia, serif; font-size:32px; font-weight:800}
    .brand-sub{color:#ffffffcc; margin-top:4px; font-size:16px}

    /* Lista categorie – più piccola per lasciare spazio al video */
    .cat-list{
      display:flex; flex-direction:column; gap:12px; margin-top:12px;
      max-height:62vh; overflow:auto; padding-right:4px;
    }
    .cat-card{
      display:flex; align-items:center; gap:14px;
      background:rgba(255,255,255,.82); border:1px solid #ffffff70; border-radius:16px;
      box-shadow:0 8px 24px #00000025; padding:10px;
      color:#1f1a17; text-decoration:none;
      backdrop-filter:saturate(140%) blur(6px);
      min-height:18vh;               /* ↓ più piccola */
      transition:transform .08s ease, box-shadow .12s ease, background .12s ease;
    }
    .cat-card:hover{transform:translateY(-2px); box-shadow:0 12px 32px #00000030}

    .cat-thumb{
      width:72px; height:52px; border-radius:12px; overflow:hidden;
      background:#f2e8e1; flex-shrink:0; box-shadow:inset 0 0 0 1px #0000000e;
    }
    .cat-thumb img{width:100%; height:100%; object-fit:cover; display:block}

    .cat-info{min-width:0; flex:1}
    .cat-title{font-weight:800; font-size:17px; line-height:1.15; margin:0}
    .cat-sub{color:#6b5f58; font-size:.9rem; margin-top:2px}

    .cat-go{
      margin-left:auto; font-weight:700; background:#9b5c2e; color:#fff;
      border:0; border-radius:999px; padding:8px 12px; cursor:pointer;
      box-shadow:0 3px 10px #9b5c2e55;
    }
    .cat-go:hover{background:#7c4621}

    @media (max-width:480px){
      .brand-title{font-size:28px}
      .cat-thumb{width:68px;height:48px}
      .cat-card{min-height:17vh}
    }
  </style>
</head>
<body>
  <section id="landing" class="landing">
    <!-- Video di sfondo -->
    <video class="bg" autoplay muted loop playsinline preload="metadata"
           poster="/img/fallback.jpg"
           oncanplay="document.getElementById('landing').classList.add('loaded')">
      <source src="/pizza.mp4" type="video/mp4" />
    </video>

    <div class="landing-inner">
      <div class="brand-top">
        <img class="logo" src="/img/LOGO.JPG" alt="Mangia & Fuggi" onerror="this.src='/img/fallback.jpg'">
        <div>
          <div class="brand-title">Mangia &amp; Fuggi</div>
          <div class="brand-sub">Scegli la categoria</div>
        </div>
      </div>

      <div class="cat-list">
        <a class="cat-card" href="/menu#antipasti">
          <div class="cat-thumb">
            <img src="/img/CATEGORIA_ANTIPASTI.jpg" alt="Antipasti" onerror="this.src='/img/fallback.jpg'">
          </div>
          <div class="cat-info">
            <h3 class="cat-title">Antipasti</h3>
            <div class="cat-sub">Bruschette, caprese, fritti…</div>
          </div>
          <button class="cat-go">Apri</button>
        </a>

        <a class="cat-card" href="/menu#classiche">
          <div class="cat-thumb">
            <img src="/img/CATEGORIA_CLASSICHE.jpg" alt="Pizze classiche" onerror="this.src='/img/fallback.jpg'">
          </div>
          <div class="cat-info">
            <h3 class="cat-title">Pizze classiche</h3>
            <div class="cat-sub">Margherita, Marinara, Diavola…</div>
          </div>
          <button class="cat-go">Apri</button>
        </a>

        <a class="cat-card" href="/menu#gourmet">
          <div class="cat-thumb">
            <img src="/img/CATEGORIA_GOURMET.jpg" alt="Pizze gourmet" onerror="this.src='/img/fallback.jpg'">
          </div>
          <div class="cat-info">
            <h3 class="cat-title">Pizze gourmet</h3>
            <div class="cat-sub">Bufalina, Tartufo, Mortazza…</div>
          </div>
          <button class="cat-go">Apri</button>
        </a>

        <a class="cat-card" href="/menu#bevande">
          <div class="cat-thumb">
            <img src="/img/CATEGORIA_BEVANDE.jpg" alt="Bevande" onerror="this.src='/img/fallback.jpg'">
          </div>
          <div class="cat-info">
            <h3 class="cat-title">Bevande</h3>
            <div class="cat-sub">Acqua, birra, vino, soft drink</div>
          </div>
          <button class="cat-go">Apri</button>
        </a>

        <a class="cat-card" href="/menu#dessert">
          <div class="cat-thumb">
            <img src="/img/CATEGORIA_DESSERT.jpg" alt="Dessert" onerror="this.src='/img/fallback.jpg'">
          </div>
          <div class="cat-info">
            <h3 class="cat-title">Dessert</h3>
            <div class="cat-sub">Tiramisù, panna cotta, cheesecake</div>
          </div>
          <button class="cat-go">Apri</button>
        </a>

        <a class="cat-card" href="/menu">
          <div class="cat-thumb">
            <img src="/img/CATEGORIA_TUTTO.jpg" alt="Tutto il menu" onerror="this.src='/img/fallback.jpg'">
          </div>
          <div class="cat-info">
            <h3 class="cat-title">Tutto il menu</h3>
            <div class="cat-sub">Vedi tutte le categorie insieme</div>
          </div>
          <button class="cat-go">Apri</button>
        </a>
      </div>
    </div>
  </section>
</body>
</html>